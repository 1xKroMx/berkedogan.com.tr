datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("tasks")
}

model SystemState {
  key   String @id
  value String

  @@map("system_state")
}
