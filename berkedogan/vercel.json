{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/tasks/complete",
      "destination": "/api/tasks?action=complete"
    },
    {
      "source": "/api/tasks/create",
      "destination": "/api/tasks?action=create"
    },
    {
      "source": "/api/tasks/update",
      "destination": "/api/tasks?action=update"
    },
    {
      "source": "/api/tasks/delete",
      "destination": "/api/tasks?action=delete"
    },
    {
      "source": "/api/tasks/reset",
      "destination": "/api/tasks?action=reset"
    },
    {
      "source": "/api/push/key",
      "destination": "/api/push?action=key"
    },
    {
      "source": "/api/push/subscribe",
      "destination": "/api/push?action=subscribe"
    },
    {
      "source": "/api/push/test",
      "destination": "/api/push?action=test"
    },
    {
      "source": "/api/blog/entries",
      "destination": "/api/blog?action=entries"
    },
    {
      "source": "/api/blog/get",
      "destination": "/api/blog?action=get"
    },
    {
      "source": "/api/blog/publish",
      "destination": "/api/blog?action=publish"
    },
    {
      "source": "/api/blog/update",
      "destination": "/api/blog?action=update"
    },
    {
      "source": "/api/blog/delete",
      "destination": "/api/blog?action=delete"
    },
    {
      "source": "/((?!api/)(?!.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
